<launch>

    <!-- Arguments -->
    <!-- <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/> -->

    <!-- TODO: Add nodes here -->
    <!-- Map Server -->
    <arg name="map_file" default="$(find maps)/myMap.yaml"/>

    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- AMCL Node -->
    <node name="amcl" pkg="amcl" type="amcl" output="screen">
        <remap from="scan" to="/scan"/>
        <!-- Overall Filter Parameter -->
        <param name="initial_pose_x" value="-2"/>
        <param name="initial_pose_y" value="-0.5"/>
        <param name="min_particles" value="500"/>
        <param name="max_particles" value="5000"/>
        <param name="update_min_d" value="0.1"/>
        <param name="update_min_a" value="0.2"/>

        <!--  Laser Model Parameters -->
        <param name="laser_min_range" value="-1.0"/>
        <param name="laser_max_range" value="-1.0"/>
        <param name="laser_max_beams" value="60"/>
        <param name="laser_z_hit" value="0.95"/>
        <param name="laser_z_rand" value="0.05"/>

        <!-- Odometry Model Parameters -->
        <param name="odom_model_type" value="diff-corrected"/>
        <param name="odom_frame_id" value="odom"/>
        <param name="base_frame_id" value="base_footprint"/>
        <param name="global_frame_id" value="map"/>
        <param name="odom_alpha1" value="0.05"/>
        <param name="odom_alpha2" value="0.005"/>
        <param name="odom_alpha3" value="0.005"/>
        <param name="odom_alpha4" value="0.005"/>

    </node>

    <!-- Move Base -->
    <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
        <remap from="scan" to="/scan"/>
        <param name="base_global_planner" value="navfn/NavfnROS"/>
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
        <rosparam file="$(find turtlebot3_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find turtlebot3_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find turtlebot3_navigation)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find turtlebot3_navigation)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find turtlebot3_navigation)/config/base_local_planner_params.yaml" command="load" />
    </node>


</launch>